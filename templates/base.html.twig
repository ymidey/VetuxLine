<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Vetux-line{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/4/lumen/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset("css/index.css") }}">
    {% endblock %}
</head>
<body>
{% block header %}
    {% if app.user %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="{{ path("admin_show_customers") }}">Vetux-Line</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="btn btn-info" href="{{ path("admin_show_customers") }}">Affichez les clients</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info" href="{{ path("admin_add_customers") }}">Ajoutez des clients à la base
                    de données</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info" href="{{ path("admin_merge") }}">Fusionner des fichiers Csv</a>
            </li>
            <li class="nav-item">
                <a class="btn btn-info" href="{{ path("admin_invalid_customers") }}">Afficher les clients invalides</a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            {% if app.user %}
                <div>
                    Bonjour {{ app.user.userIdentifier }} <a class="btn btn-sm btn-danger"
                                                       href="{{ path("security_logout") }}">Déconnexion</a>
                </div>
            {% endif %}
        </form>
    {% endif %}
    </div>
    </nav>

{% endblock %}
<main class="mt-5 mb-5">
    <div class="col-md-8 col-12 mx-auto">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger text-center">{{ message }}</div>
        {% endfor %}
    </div>
    {% block main %}{% endblock %}
</main>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.js"
            integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
            integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
            crossorigin="anonymous"></script>
    <script src="{{ asset("js/script.js") }}"></script>
{% endblock %}
</body>
<footer>
    <p>Midey-Yannick / BTS SIO</p>
</footer>
</html>
