{% extends 'base.html.twig' %}

{% block title %}Vetux-line : Client invalides{% endblock %}

{% block main %}
    <section class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <h2 class="text-center"><i class="fas fa-user-times"></i>&nbsp;Clients avec des données invalides</h2>
                <div class="mt-4">
                    {{ form_start(csvForm) }}
                    {{ form_row(csvForm.csv) }}
                    {{ form_row(csvForm.type) }}
                    <div class="mt-4 mb-4 text-center">
                        <button class="btn btn-primary">{{ button_label | default("Télécharger le fichier Csv") }}</button>
                    </div>
                    {{ form_end(csvForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
